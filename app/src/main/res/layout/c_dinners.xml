<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="8dp">
    <LinearLayout
            android:id="@+id/v_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="2dp">
        <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:src="@drawable/dinner"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Zestaw obiadowy"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20-32 zl."
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="?android:colorBackground"/>

    <LinearLayout
            android:id="@+id/v_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="2dp">
        <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:src="@drawable/breakfast"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Zestaw sniadaniowy"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14 zl."
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>