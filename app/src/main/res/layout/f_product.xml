<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"
        android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/v_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:fitsSystemWindows="true"
            app:titleCentered="true"
            app:subtitleCentered="true"
            app:navigationIcon="@drawable/outline_arrow_back_24"
            app:menu="@menu/m_product"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/product1"
                android:scaleType="centerCrop"
                android:contentDescription="Product image"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="4dp"
                android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Na wynos"
                    android:padding="24dp"
                    android:layout_marginEnd="4dp"
                    app:icon="@drawable/outline_takeout_dining_24"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:text="Obiad"
                    app:icon="@drawable/outline_restaurant_menu_24"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="4dp"
                    android:text="14 zl"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/v_productTest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeWidth="0dp"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Podobne"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:maxLines="1"
                            android:layout_margin="16dp"
                            android:gravity="center_horizontal"/>

                    <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/product1"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rolada schabowa"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:maxLines="2"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>