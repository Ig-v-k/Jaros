<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"
        android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/v_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:fitsSystemWindows="true"
            app:titleCentered="true"
            app:subtitleCentered="true"
            app:navigationIcon="@drawable/outline_arrow_back_24"
            app:menu="@menu/m_product"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/v_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="Product image"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="4dp"
                android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/v_takeout"
                    style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Na wynos"
                    android:padding="24dp"
                    android:layout_marginEnd="4dp"
                    app:icon="@drawable/outline_takeout_dining_24"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/v_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="4dp"
                    android:padding="32dp"
                    android:text="14 zl"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/v_amount_set"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="32dp"
                    android:text="Zestaw 18 zl"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>