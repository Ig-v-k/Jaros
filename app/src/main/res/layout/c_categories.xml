<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:id="@+id/v_meals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="🥩"
                android:tooltipText="Mieso"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:id="@+id/v_soups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🥣"
                android:tooltipText="Zupy"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🍳"
                android:tooltipText="Sniadanie"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🥞"
                android:tooltipText="Nalesniki"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🥟"
                android:tooltipText="Pierogi"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🥗"
                android:tooltipText="Salaty"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="☕"
                android:tooltipText="Napoje"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:text="🍰"
                android:tooltipText="Ciasta"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

        <Button
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginEnd="16dp"
                android:text="🥡"
                android:tooltipText="Opakowania"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>
    </LinearLayout>
</HorizontalScrollView>