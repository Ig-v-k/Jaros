<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/v_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:title="Jaros"
            app:menu="@menu/m_main"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🙌 Bar mleczny, zapraszamy! "
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pyszna i Tania Kuchnia Polska"
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obiady • Sniadania • Garmaz • Wyroby wlasne • Catering dla firm"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:id="@+id/v_meals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🥩"
                    android:tooltipText="Mieso"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:id="@+id/v_soups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🥣"
                    android:tooltipText="Zupy"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🍳"
                    android:tooltipText="Sniadanie"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🥞"
                    android:tooltipText="Nalesniki"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🥟"
                    android:tooltipText="Pierogi"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🥗"
                    android:tooltipText="Salaty"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="☕"
                    android:tooltipText="Napoje"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:text="🍰"
                    android:tooltipText="Ciasta"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>

            <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="🥡"
                    android:tooltipText="Opakowania"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                    android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dania"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginStart="16dp"/>

        <Button
                android:id="@+id/v_see_all"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokaz wszystkie"
                android:layout_marginEnd="16dp"/>
    </LinearLayout>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/v_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </HorizontalScrollView>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">
            <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginStart="16dp"
                    app:chipIcon="@drawable/outline_map_24"
                    style="@style/Widget.Material3.Chip.Assist"/>

            <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Godziny pracy"
                    app:chipIcon="@drawable/outline_date_range_24"
                    style="@style/Widget.Material3.Chip.Assist"/>

            <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontakt"
                    android:layout_marginEnd="16dp"
                    app:chipIcon="@drawable/outline_call_24"
                    style="@style/Widget.Material3.Chip.Assist"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <include layout="@layout/c_footer"/>
</LinearLayout>