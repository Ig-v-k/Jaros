<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/v_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:title="Jaros"
            app:menu="@menu/m_main"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ™Œ Bar mleczny, zapraszamy! "
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pyszna i Tania Kuchnia Polska"
            android:layout_marginHorizontal="16dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obiady â€¢ Sniadania â€¢ Garmaz â€¢ Wyroby wlasne â€¢ Catering dla firm"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dania"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:layout_marginStart="16dp"/>

        <Button
                android:id="@+id/v_see_all"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokaz wszystkie"
                android:layout_marginEnd="16dp"/>
    </LinearLayout>

    <include layout="@layout/a_dinners"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">
            <com.google.android.material.chip.Chip
                    android:id="@+id/v_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginStart="16dp"
                    app:chipIcon="@drawable/outline_place_24"
                    style="@style/Widget.Material3.Chip.Assist"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/v_worktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Godziny pracy"
                    app:chipIcon="@drawable/outline_schedule_24"
                    style="@style/Widget.Material3.Chip.Assist"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/v_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontakt"
                    android:layout_marginEnd="16dp"
                    app:chipIcon="@drawable/outline_call_24"
                    style="@style/Widget.Material3.Chip.Assist"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <include layout="@layout/c_footer"/>
</LinearLayout>