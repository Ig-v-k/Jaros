<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zestaw obiadowy"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zupa, Mieso/Ryba, Warzywa/Suruwka"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="22 zl."
                android:gravity="center"
                android:drawableEnd="@drawable/outline_menu_24"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="?android:colorBackground"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zestaw sniadaniowy"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jajecznica, tal. sniadaniowy/tosty, napoj, 2 bulki"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14 zl."
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="?android:colorBackground"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nalesniki"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twarog, smietana/polewa"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14 zl."
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="?android:colorBackground"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:background="@drawable/c_dinner_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pierogi"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Miesne, 8 szt."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14 zl."
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </LinearLayout>
</LinearLayout>