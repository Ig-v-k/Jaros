<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
    <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:singleLine="true">
        <com.google.android.material.chip.Chip
                android:id="@+id/v_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginStart="16dp"
                app:chipIcon="@drawable/outline_place_24"
                style="@style/Widget.Material3.Chip.Assist"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/v_worktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Godziny pracy"
                app:chipIcon="@drawable/outline_schedule_24"
                style="@style/Widget.Material3.Chip.Assist"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/v_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontakt"
                android:layout_marginEnd="16dp"
                app:chipIcon="@drawable/outline_call_24"
                style="@style/Widget.Material3.Chip.Assist"/>
    </com.google.android.material.chip.ChipGroup>
</HorizontalScrollView>